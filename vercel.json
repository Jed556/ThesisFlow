{
    "functions": {
        "api/src/**/*.ts": {
            "memory": 512,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/health",
            "destination": "/api/src/health.ts"
        },
        {
            "source": "/api/users/create",
            "destination": "/api/src/user/create.ts"
        },
        {
            "source": "/api/users/delete",
            "destination": "/api/src/user/delete.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/app/index.html"
        }
    ],
    "headers": [
        {
            "source": "/api/users/create",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "POST, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization, X-API-Secret"
                }
            ]
        },
        {
            "source": "/api/users/delete",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization, X-API-Secret"
                }
            ]
        },
        {
            "source": "/api/health",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization, X-API-Secret"
                }
            ]
        }
    ]
}
